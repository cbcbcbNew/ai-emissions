{
  "manifest_version": 3,
  "name": "AI Tools Usage Tracker",
  "version": "1.0",
  "description": "Track how often you use AI chatbots and tools",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Usage Tracker"
  }
}